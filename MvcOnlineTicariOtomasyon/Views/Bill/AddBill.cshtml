@model MvcOnlineTicariOtomasyon.Models.Classes.Bills

@{
    ViewBag.Title = "AddBill";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Yeni Fatura Girişi</h2>
<form class="form-group" method="post">
    <label>Seri No : </label>@Html.TextBoxFor(x => x.SerialNumber, new { @class = "form-control" })
    <label>Sıra No : </label>@Html.TextBoxFor(x => x.RowNumber, new { @class = "form-control" })
    <label>Vergi Dairesi :  </label>@Html.TextBoxFor(x => x.TaxAdministration, new { @class = "form-control" })
    <label>Tarih : </label>@Html.TextBoxFor(x => x.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
    <label>Saat :  </label>@Html.TextBoxFor(x => x.HourTime, new { @class = "form-control" })
    <label>Toplam :  </label>@Html.TextBoxFor(x => x.Total, new { @class = "form-control" })
    <label>Teslim Eden :  </label>@Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    <label>Teslim Alan :  </label>@Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
    <button type="submit" class="btn btn-success">Ekle</button>
</form>
