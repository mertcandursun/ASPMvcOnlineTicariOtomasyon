@model MvcOnlineTicariOtomasyon.Models.Classes.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Ürün Ekle</h2>
<br />
<div class="row">
    <div class="col">
        <form class="form-group" method="post">
            <b><label class="mt-1">Ürün Adı : </label></b>&nbsp;@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            <b><label class="mt-1">Marka : </label></b>&nbsp;@Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
            <b><label class="mt-1">Stok : </label>&nbsp;</b>@Html.TextBoxFor(x => x.Stock, new { @class = "form-control", @type = "number" })
        <b><label class="mt-1">Alış Fiyatı : </label>&nbsp;</b>@Html.TextBoxFor(x => x.BuyPrice, new { @class = "form-control", @type = "number" })
        <b><label class="mt-1">Satış Fiyatı : </label>&nbsp;</b>@Html.TextBoxFor(x => x.SellPrice, new { @class = "form-control", @type = "number" })
        <b><label class="mt-1">Kategori : </label>&nbsp;</b>@Html.DropDownListFor(x => x.CategoryID,(IEnumerable<SelectListItem>)ViewBag.result, new {@class="form-control"})
        <b><label class="mt-1">Görsel : </label>&nbsp;</b>@Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        <b><label class="mt-1">Durum : </label>&nbsp;</b>@Html.TextBoxFor(x => x.Status, new { @class = "form-control mb-3" })
            <button class="btn btn-success">Ekle</button>
        </form>
    </div>
</div>
