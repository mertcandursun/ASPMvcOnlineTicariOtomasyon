@model MvcOnlineTicariOtomasyon.Models.Classes.SaleAction
@{
    ViewBag.Title = "GetSale";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satış İşlemi Güncelle</h2>
@using (Html.BeginForm("UpdateSale", "Sale", FormMethod.Post))
{
<div class="col-11 flex">
    @Html.HiddenFor(x => x.Id)
    <label>Ürün : </label>
    @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.result, new { @class = "form-control" })
    <label>Cari : </label>
    @Html.DropDownListFor(x => x.CustomerID, (List<SelectListItem>)ViewBag.result2, new { @class = "form-control" })
    <label>Personel : </label>
    @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.result1, new { @class = "form-control" })
    <label>Adet : </label>
    @Html.TextBoxFor(x => x.Number, new { @class = "form-control" })
    <label>Fiyat : </label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <label>Toplam : </label>
    @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control"})
    <label>Tarih : </label>
    @Html.TextBoxFor(x => x.Date, "{0:yyyy-MM-dd}", new {@class="form-control", @type = "date" })
    <button class="btn btn-success mt-2">Kaydet</button>
</div>
}
