@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.CategoryGroup>

<div class="card">
    <div class="card-header">
        <h3 class="card-title text-bold">Departman Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{ i++; }@i</td>
                        <td>@x.Product</td>
                        <td>
                            @if (x.Count == 10)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: @x.Count%"></div>
                                </div>
                            }
                            @if (x.Count == 20)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @x.Count%"></div>
                                </div>
                            }
                            @if (x.Count == 30)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: @x.Count%"></div>
                                </div>
                            }
                        </td>
                        @if (x.Count == 10)
                        {
                            <td><span class="badge bg-danger">@x.Count%</span></td>
                        }
                        @if (x.Count == 20)
                        {
                            <td><span class="badge bg-warning">@x.Count%</span></td>
                        }
                        @if (x.Count == 30)
                        {
                            <td><span class="badge bg-success">@x.Count%</span></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
